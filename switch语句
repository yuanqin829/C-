   #define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
	int cholse;
	while (1)
	{
		system("cls");
		printf("#############################\n");
		printf("|       学生成绩管理        |\n");
		printf("#############################\n");
		printf("|        录入信息           |\n");
		printf("|        查找信息           |\n");
		printf("|        删除信息           |\n");
		printf("|________修改信息___________|\n");


		scanf("%d", &cholse);

		switch (cholse)
		{
		case 1:
			printf("录入信息\n");
			break;
		case 2:
			printf("查找信息\n");
			break;
		case 3:
			printf("删除信息\n");
			break;
		case 4:
			printf("修改信息\n");
			break;

		default:
			printf("请重新输入\n");
			break;
		}

		getchar();
		return 0;
	}

	
}
